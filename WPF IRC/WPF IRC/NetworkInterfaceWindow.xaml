<UserControl x:Class="WPF_IRC.NetworkInterfaceWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignHeight="287" d:DesignWidth="809" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180*" />
            <ColumnDefinition Width="629*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0*" />
            <RowDefinition Height="287*" />
        </Grid.RowDefinitions>
        <TextBox ScrollViewer.VerticalScrollBarVisibility="Auto"  Height="23" Name="inputBox" VerticalAlignment="Bottom" Width="Auto" Grid.Row="1" Background="#FFA3EBD3" Grid.ColumnSpan="2" KeyDown="textBox1_KeyDown" />
        <TextBox HorizontalAlignment="Stretch" Name="textBox2" VerticalAlignment="Stretch" Width="Auto" IsReadOnly="True" Background="#FFB2A8D6" Margin="0,0,0,29" Grid.RowSpan="2" Grid.ColumnSpan="2" DataContext="{Binding ElementName=textBox2}" />
    </Grid>
</UserControl>
